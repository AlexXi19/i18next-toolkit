{
  "$ref": "#/definitions/i18next-toolkit-config",
  "definitions": {
    "i18next-toolkit-config": {
      "type": "object",
      "properties": {
        "publicDir": {
          "type": "string",
          "default": "./public",
          "description": "Asset dir which serve static files"
        },
        "defaultLocale": {
          "type": "string",
          "default": "en",
          "description": "Fallback locale language"
        },
        "locales": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "en"
          ],
          "description": "Supported locales"
        },
        "indentSpaces": {
          "type": "number",
          "description": "Indent Spaces when generate json",
          "default": 2
        },
        "verbose": {
          "type": "boolean",
          "default": false
        },
        "extractor": {
          "type": "object",
          "properties": {
            "input": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [
                "./**/*.{js,jsx,ts,tsx}",
                "!./**/*.spec.{js,jsx,ts,tsx}",
                "!**/node_modules/**"
              ]
            },
            "output": {
              "type": "string",
              "default": "./public/locales"
            }
          },
          "additionalProperties": false,
          "default": {}
        },
        "scanner": {
          "type": "object",
          "properties": {
            "source": {
              "type": "string",
              "default": "./**/*.tsx"
            },
            "tsconfigPath": {
              "type": "string",
              "default": "./tsconfig.json"
            },
            "indentationText": {
              "type": "string",
              "enum": [
                "  ",
                "    ",
                "        ",
                "\t"
              ],
              "default": "  "
            },
            "autoImport": {
              "type": "boolean",
              "default": false
            },
            "ignoreFiles": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": []
            },
            "ignoreText": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": []
            }
          },
          "additionalProperties": false,
          "default": {}
        },
        "translator": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "prompt",
                "openai"
              ],
              "default": "prompt"
            },
            "openai": {
              "type": "object",
              "properties": {
                "baseURL": {
                  "type": "string",
                  "description": "Default is: https://api.openai.com/v1"
                },
                "apiKey": {
                  "type": "string"
                },
                "modelName": {
                  "type": "string",
                  "enum": [
                    "gpt-3.5-turbo",
                    "gpt-3.5-turbo-0125",
                    "gpt-3.5-turbo-1106",
                    "gpt-3.5-turbo-instruct",
                    "gpt-4",
                    "gpt-4-0613",
                    "gpt-4-32k",
                    "gpt-4-32k-0613",
                    "gpt-4-1106-vision-preview",
                    "gpt-4-vision-preview",
                    "gpt-4-1106-preview",
                    "gpt-4-turbo-preview",
                    "gpt-4-0125-preview"
                  ],
                  "description": "Check out this url: https://platform.openai.com/docs/models/overview",
                  "default": "gpt-3.5-turbo"
                }
              },
              "additionalProperties": false,
              "description": "Config with translate file by openai"
            }
          },
          "additionalProperties": false,
          "default": {}
        }
      },
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
